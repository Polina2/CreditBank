<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <property name="uuid_type" value="uuid" dbms="postgresql"/>
    <property name="uuid_function" value="gen_random_uuid()" dbms="postgresql"/>

    <changeSet id="1" author="Haku">
        <createTable tableName="client">
            <column name="client_id" type="${uuid_type}" defaultValueComputed="${uuid_function}">
                <constraints primaryKey="true"/>
            </column>
            <column name="last_name" type="varchar(50)"/>
            <column name="first_name" type="varchar(50)"/>
            <column name="middle_name" type="varchar(50)"/>
            <column name="birth_date" type="date"/>
            <column name="email" type="varchar(50)"/>
            <column name="gender" type="varchar(10)"/>
            <column name="marital_status" type="varchar(30)"/>
            <column name="dependent_amount" type="int"/>
            <column name="passport" type="jsonb"/>
            <column name="employment" type="jsonb"/>
            <column name="account_number" type="varchar(50)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>